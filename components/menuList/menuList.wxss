@import "../../app.wxss";

.menu-list {
  padding: 0 15rpx;
}
.item {
  border-top: 1rpx solid #ccc;
  padding: 24rpx 15rpx 24rpx 30rpx;
}
.item-inner {
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.item-first {
  border-top: none;
}
.content-box {
  display: flex;
  align-items: center;
}
.item-content {
  margin-right: 10rpx;
}
.item-tip {
  color: #ff2a2a;
  margin-top: 10rpx;
  font-size: 22rpx;
}