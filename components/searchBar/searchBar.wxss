/* components/searchBar/searchBar.wxss */
@import "../../app.wxss";

.top-search {
  height: 88rpx;
  position: relative;
}
.bg-search {
  width: 100%;
  height: 100%;
  display: block;
}
.top-search-inner {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}
.search-icon {
  width: 24rpx;
  height: 24rpx;
}
.search-box {
  flex-grow: 1;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  overflow: hidden;
  margin-right: 20rpx;
}
.search-input {
  flex-grow: 1;
  margin-left: 20rpx;
}
.get-search {
  color: #fff;
}