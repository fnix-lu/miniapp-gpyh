/* components/goodsList/goodsList.wxss */
@import "../../app.wxss";

.goods-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  position: relative;
}
.goods-item-last {
  border-bottom: none;
}
.goods-imgbox {
  width: 158rpx;
  height: 158rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  position: relative;
  margin-right: 12rpx;
  overflow: hidden;
}
.goods-img {
  width: 100%;
  height: 100%;
  display: block;
}
.goods-member {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.gpyh-self {
  width: 48rpx;
  height: 30rpx;
  vertical-align: middle;
}
.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #999;
  position: relative;
}
.goods-name {
  word-break: break-all;
  color: #333;
}
.goods-text {
  display: flex;
  flex-wrap: wrap;
  margin: 16rpx 0;
}
.no-img {
  /* margin: 20rpx 0; */
}
.goods-text-item {
  flex: 1 50%;
}
.price-del {
  text-decoration: line-through;
  margin-left: 10rpx;
}
.cart-icon {
  position: absolute;
  right: 0;
  bottom: 0;
}
.spec-num {
  display: inline-block;
  padding: 0 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  margin-right: 10rpx;
}