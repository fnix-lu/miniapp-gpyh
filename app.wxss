/* 全局样式 */
.container {
  background: #eee;
  color: #666;
  font-size: 24rpx;
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  box-sizing: border-box;
}


.modal {
  color: #666;
  font-size: 24rpx;
}
.modal-shadow {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .3);
  z-index: 99;
}
.raise {
  position: relative;
  z-index: 100;
}
.side-right {
  position: fixed;
  width: 640rpx;
  top: 0;
  bottom: 0;
  right: 0;
  background: #fff;
  z-index: 100;
}
.side-bottom {
  position: fixed;
  height: 930rpx;
  bottom: 0;
  left: 0;
  right: 0;
  background: #fff;
  z-index: 100;
}


.m20-x {
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.p20-x {
  padding-left: 20rpx;
  padding-right: 20rpx;
}


.bold { font-weight: bold; }
.f28 { font-size: 28rpx; }


.left { text-align: left; }
.right { text-align: right; }
.center { text-align: center; }


.bc-white { background-color: #fff; }


.i24 { width: 24rpx; height: 24rpx; }
.i32 { width: 32rpx; height: 32rpx; }
.i44 { width: 44rpx; height: 44rpx; }


.btn {
  height: 80rpx;
  line-height: 80rpx;
  font-size: 28rpx;
  text-align: center;
}
.btn-primary {
  background: #0068b7;
  color: #fff;
}
.btn-default {
  background: #eee;
  color: #0068b7;
}


.blk-mode1 {
  border-radius: 10rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
  margin-left: 20rpx;
  margin-right: 20rpx;
}
.blk-mode2 {
  overflow: hidden;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.blk-mode3 {
  overflow: hidden;
  margin-bottom: 20rpx;
}


.price-main {
  color: #ff671c;
}

.ellipsis {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.extra {
  opacity: 0;
}