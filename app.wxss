.block-head {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 1rpx solid #ccc;
}
.block-foot {
  padding: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

/* 切换标签 */
.tabs {
  height: 79rpx;
  border-bottom: 1rpx solid #ccc;
  display: flex;
  justify-content: center;
}
.tabs-item {
  flex: 1 25%;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
}
.tabs-item::after {
  content: '';
  width: 0;
  height: 100%;
  border-right: 1rpx solid #ccc;
  position: absolute;
  top: 0;
  right: -1rpx;
}
.tabs-item-on {
  background: #eff4fa;
  color: #0068b7;
}

/* 底栏 */
.footbar {
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 100rpx;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 底栏 带主按钮 */
.footbar-aside {
  flex: 1;
  display: flex;
  justify-content: space-between;
  border-top: 1rpx solid #ccc;
  height: 100%;
}
.footbar-aside-item {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}
.footbar-main {
  width: 240rpx;
  height: 100%;
}