/* pages/orderCenter/orderCenter.wxss */
.btn-hollow {
  font-size: 24rpx;
  height: 52rpx;
}
.goods-item {
  background: #eee;
  display: flex;
  border-bottom: 1rpx solid #fff;
}
.goods-item-last {
  border-bottom: none;
}
.goods-imgbox {
  width: 158rpx;
  height: 158rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  position: relative;
  margin-right: 12rpx;
  overflow: hidden;
  background: #fff;
}
.goods-img {
  width: 100%;
  height: 100%;
  display: block;
}
.goods-infobox {
  flex: 1;
  word-break: break-all;
  line-height: 1.5;
}
.goods-pricebox {
  width: 160rpx;
  line-height: 1.5;
}