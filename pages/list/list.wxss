.modal-shadow {
  position: fixed;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  background: rgba(0, 0, 0, .3);
  z-index: 99;
}
.raise {
  position: relative;
  z-index: 100;
}


.search-tabs {
  display: flex;
}
.tab-item {
  flex: 1;
  height: 87rpx;
  line-height: 87rpx;
  text-align: center;
  border-bottom: 1rpx solid #ccc;
}
.tab-item-on {
  color: #0068b7;
  border-bottom-color: #0068b7;
}
.search-block {
  padding: 0 32rpx;
}
.search-head {
  display: flex;
  justify-content: space-between;
  align-items: center;
  align-content: center;
  height: 88rpx;
}
.search-item {
  display: inline-block;
  height: 48rpx;
  line-height: 48rpx;
  padding: 0 18rpx;
  border-radius: 24rpx;
  background: #dddddd;
  margin-right: 24rpx;
  margin-bottom: 30rpx;
}
.delete-icon {
  width: 32rpx;
  height: 32rpx;
}
.filter-bar {
  display: flex;
}

.goods-item {
  display: flex;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}
.goods-imgbox {
  width: 158rpx;
  height: 158rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  position: relative;
  margin-right: 12rpx;
  overflow: hidden;
}
.goods-img {
  width: 100%;
  height: 100%;
  display: block;
}
.goods-member {
  width: 60rpx;
  height: 60rpx;
  position: absolute;
  right: 0;
  top: 0;
}
.gpyh-self {
  width: 48rpx;
  height: 30rpx;
  vertical-align: middle;
}
.goods-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #999;
  position: relative;
}
.goods-name {
  word-break: break-all;
  color: #333;
}
.goods-text {
  display: flex;
}
.goods-text-item {
  flex: 1;
}
.price-main {
  color: #ff671c;
}
.price-del {
  text-decoration: line-through;
  margin-left: 10rpx;
}
.cart-icon {
  width: 32rpx;
  height: 32rpx;
  position: absolute;
  right: 0;
  bottom: 0;
}
.spec-num {
  display: inline-block;
  padding: 0 10rpx;
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  margin-right: 10rpx;
}


.side-right {
  position: fixed;
  width: 640rpx;
  top: 0;
  bottom: 0;
  right: 0;
  background: #fff;
  z-index: 100;
}


.filter-body {
  max-height: 720rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 20rpx;
}
/* .filter-body::after {
  content: '';
  flex: none;
} */
.filter-item {
  background: #eee;
  width: 190rpx;
  height: 60rpx;
  line-height: 1.2;
  text-align: center;
  margin-bottom: 16rpx;
  border-radius: 12rpx;
  border: 1rpx solid #eee;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}
.filter-item-on {
  border-color: #0068b7;
  background: #eff4fa;
}
.selected-icon {
  width: 44rpx;
  height: 44rpx;
  position: absolute;
  right: 0;
  top: 0;
}