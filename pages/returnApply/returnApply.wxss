/* pages/returnApply/returnApply.wxss */
.goods-item {
  display: flex;
  border-bottom: 1rpx solid #ccc;
}
.goods-item-last {
  border-bottom: none;
}
.goods-imgbox {
  width: 158rpx;
  height: 158rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  position: relative;
  margin-right: 12rpx;
  overflow: hidden;
  background: #fff;
}
.goods-img {
  width: 100%;
  height: 100%;
  display: block;
}
.goods-infobox {
  flex: 1;
  word-break: break-all;
  line-height: 1.5;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.amount-box {
  display: flex;
  justify-content: flex-end;
  align-items: center;
}
.change-amount {
  width: 40rpx;
  height: 40rpx;
  background: #eee;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: 0 10rpx;
}
.amount {
  width: 80rpx;
  height: 40rpx;
  min-height: 40rpx;
  text-align: center;
  background: #eee;
  display: flex;
  align-items: center;
}

.goods-pricerow {
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
}

.return-explain {
  border-top: 1rpx solid #ccc;
  padding:24rpx 15rpx 24rpx 30rpx;
}
.return-explain-val {
  border: 1rpx solid #ccc;
  border-radius: 8rpx;
  width: 98%;
  height: 120rpx;
  padding: 20rpx 30rpx;
  box-sizing: border-box;
}