/* pages/logisticsInfo/logisticsInfo.wxss */
.logistics-step {
  padding-bottom: 40rpx;
  padding-left: 40rpx;
  position: relative;
}
.logistics-step::before {
  content: '';
  width: 16rpx;
  height: 16rpx;
  border-radius: 50%;
  background: #ccc;
  position: absolute;
  left: 0;
  top: 10rpx;
}
.logistics-step::after {
  content: '';
  width: 4rpx;
  background: #ccc;
  position: absolute;
  left: 6rpx;
  top: 36rpx;
  bottom: 0;
}
.logistics-step-last {
  padding-bottom: 0;
}
.logistics-step-last::after {
  display: none;
}