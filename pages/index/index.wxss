/* pages/index/index.wxss */
.top-search {
  height: 88rpx;
  position: relative;
}
.bg-search {
  width: 100%;
  height: 100%;
  display: block;
}
.top-search-inner {
  position: absolute;
  left: 0;
  right: 0;
  top: 0;
  bottom: 0;
  display: flex;
  align-items: center;
}
.curr-city-box {
  display: flex;
  align-items: center;
}
.location-icon,
.search-icon,
.scan-icon {
  width: 24rpx;
  height: 24rpx;
}
.curr-city {
  color: #fff;
  width: 4em;
  padding-left: 5rpx; 
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-box {
  flex: 1;
  height: 48rpx;
  border-radius: 8rpx;
  display: flex;
  align-items: center;
  padding: 0 20rpx;
  overflow: hidden;
  margin: 0 20rpx;
}
.search-input {
  flex: 1;
  margin-left: 20rpx;
}
.scan {
  display: flex;
  align-items: center;
}

.index-scroll {
  position: absolute;
  left: 0;
  right: 0;
  top: 88rpx;
  bottom: 0;
}

.slider-img {
  width: 100%;
  height: 100%;
}
.notice {
  position: relative;
}
.notice-swiper {
  height: 72rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
  line-height: 72rpx;
}
.notice-more {
  height: 100%;
  position: absolute;
  top: 0;
  right: 0;
  line-height: 74rpx;
  padding-right: 16rpx;
}
.entrance {
  display: flex;
  justify-content: space-around;
  padding: 50rpx 0;
}
.entrance-item-imgbox {
  display: flex;
  width: 120rpx;
  height: 120rpx;
  border-radius: 20rpx;
  justify-content: center;
  align-items: center;
}
.imgbox-member {
  background: #f29600;
}
.imgbox-tool {
  background: #2ca6e0;
}
.imgbox-fastener {
  background: #1eaa39;
}
.entrance-item-img {
  width: 78rpx;
  height: 78rpx;
}
.entrance-item-txt {
  display: block;
  text-align: center;
  margin-top: 30rpx;
}
.contact {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 16rpx;
  height: 72rpx;
  border-top: 1rpx solid #ccc;
  border-bottom: 1rpx solid #ccc;
}
.section-title {
  height: 90rpx;
  line-height: 90rpx;
  text-align: center;
  color: #0068b7;
  font-size: 28rpx;
}
.section-list {
  display: flex;
  flex-wrap: wrap;
  border-top: 1rpx solid #ccc;
}
.section-item {
  flex: 1 250rpx;
  position: relative;
  padding: 16rpx 0 26rpx;
}
.section-item::before {
  content: '';
  width: 0;
  height: 100%;
  border-right: 1rpx solid #ccc;
  position: absolute;
  top: 0;
  right: -1rpx;
}
.section-item::after {
  content: '';
  height: 0;
  width: 100%;
  border-bottom: 1rpx solid #ccc;
  position: absolute;
  left: 0;
  bottom: 0;
}
.section-item-img {
  display: block;
  width: 100rpx;
  height: 100rpx;
  margin: auto;
}
.section-item-txt {
  display: block;
  text-align: center;
  margin-top: 6rpx;
}