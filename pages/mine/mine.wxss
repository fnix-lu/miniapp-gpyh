.info-preview,
.not-login {
  height: 280rpx;
  background: #29a1f6;
}
.not-login {
  display: flex;
  justify-content: center;
  
}
.to-log-reg {
  width: 400rpx;
  height: 80rpx;
  border: 1rpx solid #fff;
  border-radius: 14rpx;
  line-height: 80rpx;
  text-align: center;
  color: #fff;
  font-size: 28rpx;
  margin-top: 85rpx;
}
.operation-bar {
  height: 70rpx;
  display: flex;
  justify-content: flex-end;
  align-items: center;
  padding-right: 20rpx;
}
.setting {
  width: 32rpx;
  height: 32rpx;
}
.info-block {
  height: 140rpx;
  display: flex;
}
.head-imgbox {
  width: 200rpx;
  text-align: center;
  position: relative;
}
.head-img {
  width: 120rpx;
  height: 120rpx;
  background: rgba(255, 255, 255, .5);
  border-radius: 50%;
}
.info-member {
  width: 150rpx;
  height: 36rpx;
  line-height: 36rpx;
  border-radius: 18rpx;
  color: #fff;
  background: rgba(0, 0, 0, .5);
  margin: auto;
  position: absolute;
  left: 0;
  right: 0;
  bottom: 0;
  font-size: 20rpx;
}
.info-txtbox {
  width: 380rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  color: #fff;
  line-height: 1;
}
.info-username {
  font-size: 48rpx;
}
.info-row {
  display: flex;
  align-items: center;
}
.info-item {
  display: inline-flex;
  align-items: center;
}
.other {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: flex-end;
  align-items: flex-end;
}
.other-nav {
  display: flex;
  width: 144rpx;
  height: 50rpx;
  justify-content: center;
  align-items: center;
  border-radius: 25rpx;
  background: rgba(255, 255, 255, .5);
  margin-top: 20rpx;
  color: #0068b7;
  margin-right: 20rpx;
}



.datainfo {
  margin-top: -36rpx;
  display: flex;
  padding: 30rpx 0;
}
.datainfo-item {
  flex: 1;
  text-align: center;
  position: relative;
}
.datainfo-item::before {
  content: '';
  width: 0;
  height: 100%;
  border-right: 1rpx solid #ccc;
  position: absolute;
  top: 0;
  right: -1rpx;
}