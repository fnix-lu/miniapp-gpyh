/* pages/orderDetail/orderDetail.wxss */
.receiver {
  display: flex;
  align-items: center;
}
.receiver-text {
  margin-left: 20rpx;
}
.receiver-contact {
  display: flex;
  justify-content: space-between;
  margin-bottom: 10rpx;
}
.receiver-address {
  line-height: 1.5
}

.btn-hollow {
  font-size: 24rpx;
  height: 52rpx;
  position: absolute;
  right: 20rpx;
  bottom: 20rpx;
}
.goods-item {
  background: #eee;
  display: flex;
  border-bottom: 1rpx solid #fff;
  position: relative;
}
.goods-item-last {
  border-bottom: none;
}
.goods-imgbox {
  width: 158rpx;
  height: 158rpx;
  border: 1rpx solid #ccc;
  border-radius: 12rpx;
  position: relative;
  margin-right: 12rpx;
  overflow: hidden;
  background: #fff;
}
.goods-img {
  width: 100%;
  height: 100%;
  display: block;
}
.goods-infobox {
  flex: 1;
  word-break: break-all;
  line-height: 1.5;
}
.goods-pricebox {
  width: 160rpx;
  line-height: 1.5;
}

.price-item {
  display: flex;
  justify-content: space-between;
}

.footbar {
  border-top: 1rpx solid #ccc;
  justify-content: flex-end;
}
.btn-primary {
  margin: 0 20rpx 0 0;
}